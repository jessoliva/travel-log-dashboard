<div class="vw-100">
    <!-- travel section -->
    <section class="single-post-top row mx-5 mt-5 mb-3">
        <div class="col-5 post-photo">
        </div>

        <div class="col-7">
            <h2>{{title}}</h2>
        </div>
    </section>
    <section class="single-post-middle mx-5 text-center">
        <p>{{description}}</p>
    </section>
    <section class="single-post-bottom mx-5 row">
        <div class="col-4 tips-columns">
            <p class="tips-heading">places</p>
            <div class="tip text-center mt-0">{{restaurants}}</div>
            <div class="tip text-center my-2">{{attractions}}</div>
            <p class="tips-heading">cost</p>
            <div class="tip text-center mt-0">{{meal_cost}}</div>
            <div class="tip text-center my-2">{{hotel_cost}}</div>

        </div>
        <div class="col-4 tips-columns">
            <p class="tips-heading">tips</p>
            <div class="tips-entry text-center mt-0">{{tips}}</div>
        </div>

        <div class="col-4 tips-columns">
            <p class="tips-heading">best for</p>
            <div class="tip text-center mt-0">Pet Friendly: {{pet_friendly}} </div>
            <div class="tip text-center my-2">Kid Friendly: {{kid_friendly}}</div>
            <div class="tip text-center my-2">Safety Rating: {{safety_rating}}</div>

        </div>
    </section>
</div>