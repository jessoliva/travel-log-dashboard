<main class="p-0">

    <div class="single vw-100">
        <!-- travel section -->
        <section class="single-post-top row mx-5 mt-5 mb-3">
            {{#if post.image_name}}
            <div class="col-5 post-photo" style="background-image: url('../images/{{post.image_name}}')"></div>
            {{else}}
            <div class="col-5 post-photo" style="background-image: url('../images/test.jpeg')"></div>
            {{/if}}

            <div class="col-7 single-text">
                <h2>{{fix_case post.title}}</h2>
                <p>{{post.description}}</p>

                {{#if notSaved}}
                <div class="create-btn-div">
                    <button id="save-post-btn" type="click" class="mt-3 btn-save btn rounded-pill shadow">
                        <i class="fa-solid fa-heart"></i>
                    </button>
                </div>
                {{/if}}
    
                {{#if deletePost}}
                <div class="create-btn-div">
                    <button id="delete-post-btn" type="click" class="mt-3 btn-save btn rounded-pill shadow">Delete</button>
                </div>

                <!-- modal for generate workout section -->
                <div id="generate-modal" class="hide modal-single modal-fade d-flex align-items-center">
                    <!-- modal info -->
                    <div class="modal-info">
                        <form id="user-form" class="d-flex flex-wrap justify-content-center align-items-center">
                            <p class="form-input w-100  m-0 text-center"/>Confirm Post Deletion.</p>

                            <button
                            id="delete-post"
                            type="submit"
                            class="red-btns mx-2 btn"
                            >
                            Delete
                            </button>

                            <button
                            id="close-modal"
                            type="submit"
                            class="modal-btns btn"
                            >
                            Close
                            </button>
                        </form>
                    </div>
                </div>
                {{/if}}

            </div>
        </section>

        <section class="single-post-bottom mx-5 row">
            {{!-- TIPS --}}
            <div class="col-8 tips-columns">
                {{#if post.tips}}
                <p class="tips-heading">travel tips</p>
                <div class="display-info places">{{post.tips}}</div>
                {{/if}}

                {{!-- BEST-FOR --}}
                <p id="best-p" class="tips-heading">best for</p>
                <div id="best-for" class="d-flex flex-wrap">
                    {{#if post.pet_friendly}}
                    <div class="places d-flex flex-wrap justify-content-center">
                        <div class="display-info w-100 text-center">Pet Friendly</div>
                        <p>{{post.pet_friendly}}</p>
                    </div>
                    {{/if}}

                    {{#if post.kid_friendly}}
                    <div class="places d-flex flex-wrap justify-content-center">
                        <div class="display-info w-100 text-center">Kid Friendly</div>
                        <p>{{post.kid_friendly}}</p>
                    </div>
                    {{/if}}

                    {{#if post.safety_rating}}
                    <div class="places d-flex flex-wrap justify-content-center">
                        <div class="display-info w-100 text-center">Safety Rating</div>
                        <p>{{post.safety_rating}}</p>
                    </div>
                    {{/if}}
                </div>
            </div>

            {{!-- PLACES AND COST --}}
            <div class="col-4 tips-columns-left">
                <p id="places-p" class="tips-heading">places</p>
                <div id="places" class="places">
                    {{#if post.restaurants}}
                    <div class="display-info">Favorite Restaurants</div>
                    <p>{{fix_case post.restaurants}}</p>
                    {{/if}}
                    {{#if post.attractions}}
                    <div class="display-info pb-0">Attractions</div>
                    <p>{{fix_case post.attractions}}</p>
                    {{/if}}
                </div>  
                <p id="cost-p" class="tips-heading">cost</p>
                <div id="cost" class="places">
                    {{#if post.meal_cost}}
                    <div class="display-info">Avg Cost Per Meal Per Person: <span class="black-text">&nbsp;{{post.meal_cost}}</span></div>
                    {{/if}}
                    {{#if post.hotel_cost}}
                    <div class="display-info">Avg Cost Per Night in Hotels/Airbnb: <span class="black-text">&nbsp;{{post.hotel_cost}}</span></div>

                    {{/if}}
                </div>  
            </div>
        </section>

        {{#if loggedIn}}
        <form class="comment-form">
            <div class="d-flex justify-content-center">
                <textarea class="comment-input" id="comment-input" type="text"></textarea>
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn-search  btn rounded-pill shadow" id="comment-btn" type="click">add comment</button>
            </div>
        </form>
        {{/if}}

        {{> comments post.comments}}
    </div>
</main>

<script src="/javascript/single-post.js"></script>
{{#if deletePost}}
<script src="/javascript/delete-post.js"></script>
{{/if}}
{{#if notSaved}}
<script src="/javascript/save-post.js"></script>
{{/if}}