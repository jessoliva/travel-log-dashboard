<div class="vw-100">
    <!-- travel section -->
    <section class="single-post-top row mx-5 mt-5 mb-3">
        {{#if post.image_name}}
        <div class="col-5 post-photo" style="background-image: url('../images/{{post.image_name}}')">
            {{!-- <img src="../images/{{post.image_name}}" /> --}}
        </div>
        {{else}}
        <div class="col-5 post-photo" style="background-image: url('../images/test.jpeg')">
            {{!-- <img src="../images/{{post.image_name}}" /> --}}
        </div>

        {{/if}}



        <div class="col-7">
            <h2>{{fix_case post.title}}</h2>
            <p>{{post.description}}</p>
        </div>

    </section>
    {{!-- <section class="single-post-middle mx-5 text-center">
        <p>{{post.description}}</p>
    </section> --}}
    <section class="single-post-bottom mx-5 row">

        <div class="col-4 tips-columns">
            <p class="tips-heading">places</p>
            {{#if post.restaurants}}
            <div class="display-info">favorite restaurant: {{fix_case post.restaurants}}</div>
            {{/if}}
            {{#if post.attractions}}
            <div class="display-info">best attraction: {{fix_case post.attractions}}</div>
            {{/if}}
            <p class="tips-heading">cost</p>
            <div class="display-info">average cost per meal per person: {{post.meal_cost}}</div>
            <div class="display-info">average cost per night in hotel or airbnb: {{post.hotel_cost}}</div>

        </div>
        <div class="col-4 tips-columns">
            <p class="tips-heading">travel tips</p>
            <div class="display-info">{{post.tips}}</div>
        </div>

        <div class="col-4 tips-columns">
            <p class="tips-heading">best for</p>
            <div class="display-info">Pet Friendly: {{post.pet_friendly}}</div>
            <div class="display-info">Kid Friendly: {{post.kid_friendly}}</div>
            <div class="display-info">Safety Rating: {{post.safety_rating}}</div>

        </div>
    </section>

    {{#if notSaved}}
    <div class="create-btn-div">
        <button id="save-post-btn" type="click" class="mt-5 btn-search btn rounded-pill shadow">
            Save Post
        </button>
    </div>
    {{/if}}

    {{#if loggedIn}}
    <form class="comment-form">
        <div>
            <textarea class="comment-input" id="comment-input" type="text"></textarea>
        </div>
        <div>
            <button class="comment-btn" id="comment-btn" type="click">add comment</button>
        </div>
    </form>

    {{/if}}

    {{> comments post.comments}}
</div>

{{#if loggedIn}}
<script src="/javascript/single-post.js"></script>
{{/if}}
<script src="/javascript/save-post.js"></script>